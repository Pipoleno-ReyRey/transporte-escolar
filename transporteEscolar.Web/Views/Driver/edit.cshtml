<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Conductor</title>
    <style>
        body {
            background: linear-gradient(to right, #66a6ff, #89f7fe);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .form-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin: 50px auto;
            padding: 20px;
            max-width: 400px;
            text-align: center;
        }

        .form-container h2 {
            margin-bottom: 20px;
            color: #4CAF50;
        }

        input, select, button {
            width: 90%;
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            margin-top: 20px;
            font-size: 16px;
        }

        button:hover {
            background-color: #45a049;
        }

        #back-to-list {
            display: block;
            margin-top: 20px;
            text-decoration: none;
            color: #008CBA;
            font-weight: bold;
        }
    </style>
</head>
<body>

<div class="form-container">
    <h2>Editar Conductor</h2>
    <input type="hidden" id="driver-id">
    <input type="text" id="name" name="name" placeholder="Nombre" required>
    <input type="text" id="license" name="license" placeholder="Licencia" required>
    <input type="number" id="salary" name="salary" placeholder="Salario" required>
    <select id="vehicle" name="vehicle" required>
        <option value="">Seleccione un veh√≠culo</option>
        <option value="bus">Bus</option>
        <option value="carro">Carro</option>
        <option value="minibus">Minibus</option>
    </select>
    <button onclick="updateDriver()">Guardar Cambios</button>
    <a id="back-to-list" href="/Driver/Drivers">Volver a la Lista</a>
</div>

<script>
    const driverId = localStorage.getItem('driverId').value;

    async function updateDriver() {
        const driverData = {
            name: document.getElementById('name').value,
            license: document.getElementById('license').value,
            salary: parseFloat(document.getElementById('salary').value),
            vehicle: document.getElementById('vehicle').value
        };

        try {
            const response = await fetch(`/api/Driver/Update/${driverId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(driverData)
            });

            if (!response.ok) {
                const errorText = await response.text();
                throw new Error(errorText || `Error: ${response.status} ${response.statusText}`);
            }

            window.location.href = "/Driver/Drivers";
        } catch (error) {
            alert(`Error al actualizar el conductor: ${error.message}`);
        }
    }

    document.addEventListener('DOMContentLoaded', loadDriver);
</script>

</body>
</html>
